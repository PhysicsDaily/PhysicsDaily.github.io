{
  "name": "physics-daily-mcp",
  "version": "2.0.0",
  "description": "Enhanced Model Context Protocol server for Physics Daily content management",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "mcp": "node index.js",
    "dev": "node --watch index.js",
    "test": "node --experimental-test-runner test/test-runner.js",
    "test:unit": "node --experimental-test-runner test/unit/*.test.js",
    "test:integration": "node --experimental-test-runner test/integration/*.test.js",
    "test:watch": "node --experimental-test-runner --watch test/test-runner.js",
    "lint": "eslint *.js test/**/*.js",
    "validate": "node scripts/validate-config.js",
    "benchmark": "node test/benchmark.js",
    "coverage": "c8 node --experimental-test-runner test/test-runner.js"
  },
  "keywords": ["mcp", "physics", "education", "content-management", "ai", "assistant"],
  "author": "Physics Daily",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "eslint": "^8.50.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PhysicsDaily/PhysicsDaily.github.io.git",
    "directory": "mcp-server"
  },
  "bugs": {
    "url": "https://github.com/PhysicsDaily/PhysicsDaily.github.io/issues"
  },
  "homepage": "https://github.com/PhysicsDaily/PhysicsDaily.github.io/tree/main/mcp-server#readme"
}