        // Save progress to localStorage
        function saveProgress() {
            const completedSections = sections.slice(0, sections.indexOf(currentSection));
            const progress = {
                currentSection: currentSection,
                completedSections: completedSections
            };
            localStorage.setItem('measurements-progress', JSON.stringify(progress));
        }
        
        // Update progress bar
        function updateProgressBar() {
            const currentIndex = sections.indexOf(currentSection);
            const progress = ((currentIndex + 1) / sections.length) * 100;
            const progressFill = document.getElementById('progress-fill') || document.querySelector('.progress-fill');
            const progressLabel = document.getElementById('progressText');
            const progressValue = document.getElementById('progressPercent');
            const activeIndicator = document.querySelector(`[data-section="${currentSection}"]`);
            
            if (progressFill) {
                progressFill.style.width = progress + '%';
            }
            if (progressValue) {
                progressValue.textContent = Math.round(progress) + '%';
            }
            if (progressLabel && activeIndicator) {
                const fallback = activeIndicator.textContent.trim();
                const cleanedLabel = fallback.replace(/^[^A-Za-z0-9]+\s*/, '').trim();
                progressLabel.textContent = cleanedLabel || fallback;
            }
        }
        
        // Mark completed sections
        function markCompletedSections(completedSections) {
            completedSections.forEach(sectionId => {
                const btn = document.querySelector(`[data-section="${sectionId}"]`);
                if (btn) {
                    btn.classList.add('completed');
                }
            });
        }
        
        // Show specific section
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active-section');
            });
            
            // Show target section
            const targetSection = document.getElementById(sectionId);
            if (targetSection) {
                targetSection.classList.add('active-section');
            }
            
            // Update navigation
            document.querySelectorAll('.section-indicator').forEach(btn => {
                btn.classList.remove('active');
            });
            
            const activeBtn = document.querySelector(`[data-section="${sectionId}"]`);
            if (activeBtn) {
                activeBtn.classList.add('active');
            }
            
            currentSection = sectionId;
            updateProgressBar();
            saveProgress();
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        // Navigation functions
        function goToNextSection() {
            const currentIndex = sections.indexOf(currentSection);
            if (currentIndex < sections.length - 1) {
                const nextSection = sections[currentIndex + 1];
                navigateToSection(nextSection);
            }
        }
        
        function goToPrevSection() {
            const currentIndex = sections.indexOf(currentSection);
            if (currentIndex > 0) {
                const prevSection = sections[currentIndex - 1];
                navigateToSection(prevSection);
            }
        }
        
