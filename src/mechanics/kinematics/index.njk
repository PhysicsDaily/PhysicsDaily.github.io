    <script>
        // Section Navigation System
        let currentSection = 'intro';
        const sections = ['intro', 'section-1', 'section-2', 'section-3', 'section-4', 'assessment'];
        
        function initializeSectionNavigation() {
            const savedSection = localStorage.getItem('physics-kinematics-current-section');
            const completedSections = JSON.parse(localStorage.getItem('physics-kinematics-completed') || '[]');
            
            if (savedSection && sections.includes(savedSection)) {
                currentSection = (savedSection === 'assessment') ? (sections.includes('section-4') ? 'section-4' : 'intro') : savedSection;
            }
            
            completedSections.forEach(sectionId => {
                const indicator = document.querySelector(`[data-section="${sectionId}"]`);
                if (indicator) indicator.classList.add('completed');
            });
            
            showSection(currentSection);
            updateProgress();
            
            document.querySelectorAll('.section-indicator').forEach(indicator => {
                indicator.addEventListener('click', (e) => {
                    const sectionId = e.target.getAttribute('data-section');
                    navigateToSection(sectionId);
                });
            });
        }

        function navigateToSection(sectionId) {
            if (!sections.includes(sectionId)) return;
            
            if (sectionId === 'assessment') {
                window.location.href = 'mcq.html';
                return;
            }
            
            const currentIndex = sections.indexOf(currentSection);
            const targetIndex = sections.indexOf(sectionId);
            
            if (targetIndex > currentIndex) {
                markSectionCompleted(currentSection);
            }
            
            currentSection = sectionId;
            showSection(sectionId);
            updateProgress();
            saveProgress();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active-section');
            });
            
            const targetSection = document.getElementById(sectionId);
            if (targetSection) {
                targetSection.classList.add('active-section');
            }
            
            document.querySelectorAll('.section-indicator').forEach(indicator => {
                indicator.classList.remove('active');
            });
            
            const activeIndicator = document.querySelector(`[data-section="${sectionId}"]`);
            if (activeIndicator) {
                activeIndicator.classList.add('active');
            }
        }

        function markSectionCompleted(sectionId) {
            let completed = JSON.parse(localStorage.getItem('physics-kinematics-completed') || '[]');
            if (!completed.includes(sectionId)) {
                completed.push(sectionId);
                localStorage.setItem('physics-kinematics-completed', JSON.stringify(completed));
                
                const indicator = document.querySelector(`[data-section="${sectionId}"]`);
                if (indicator) indicator.classList.add('completed');
            }
        }

        function updateProgress() {
            const currentIndex = sections.indexOf(currentSection);
            const progressPercent = ((currentIndex + 1) / sections.length) * 100;
            
            const progressFill = document.getElementById('progress-fill');
            if (progressFill) {
                progressFill.style.width = progressPercent + '%';
            }
        }

        function saveProgress() {
            localStorage.setItem('physics-kinematics-current-section', currentSection);
        }

        document.addEventListener('DOMContentLoaded', function() {
            initializeSectionNavigation();
        });
    </script>
